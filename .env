# database filename
DB_NAME=app.db

# database version
DB_VERSION=1

# your CREATE TABLE statementâ€”use \n for newlines
CREATE_TASKS_TABLE=CREATE TABLE tasks(id INTEGER PRIMARY KEY AUTOINCREMENT, title TEXT NOT NULL, done INTEGER NOT NULL, created_at TEXT NOT NULL DEFAULT CURRENT_TIMESTAMP)
CREATE_EVENTS_TABLE=CREATE TABLE events(id INTEGER PRIMARY KEY AUTOINCREMENT, title TEXT NOT NULL, note TEXT NULL, repeat_rule TEXT NULL, color INTEGER NOT NULL DEFAULT 0xFF2196F3, status INTEGER NOT NULL DEFAULT 0 CHECK(status IN (0,1,2,3)), remind_min INTEGER NOT NULL DEFAULT 5, event_date TEXT NOT NULL, start_time TEXT NOT NULL, end_time NOT TEXT NULL, created_at TEXT NOT NULL DEFAULT CURRENT_TIMESTAMP, updated_at TEXT NOT NULL DEFAULT CURRENT_TIMESTAMP)
CREATE_USERS_TABLE=CREATE TABLE users(id INTEGER PRIMARY KEY AUTOINCREMENT, name TEXT NOT NULL, email TEXT NOT NULL UNIQUE, password TEXT NOT NULL, remember INTEGER NOT NULL, role INTEGER NOT NULL, created_at TEXT NOT NULL DEFAULT CURRENT_TIMESTAMP)

